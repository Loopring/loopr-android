<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <com.tomcat360.lyqb.views.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:text="LRC费用比例2‰"
        android:inputType="textMultiLine"
        android:textSize="@dimen/normalText"
        android:textColor="@color/colorWhite"
        />

    <com.tomcat360.lyqb.views.RangeSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:padding="5dp"
        app:cellMode="number"
        app:lineColorEdge="#444444"
        app:lineColorSelected="@color/colorGreen"
        app:thumbPrimaryColor="@color/colorGreen"
        app:thumbSecondaryColor="@color/colorGreen"
        app:hideProgressHint="true"
        app:maxValue="50"
        app:minValue="1"
        app:progressHintResId="@drawable/progress_hint_bg3"
        app:seekBarHeight="5dp"
        app:seekBarMode="single"
        app:thumbSize="16dp" />

     <RelativeLayout
         android:layout_marginTop="18dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="@string/slow"
             android:textSize="@dimen/normalText"
             android:textColor="@color/colorWhite"
             />
         <TextView
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="@string/quick"
             android:textSize="@dimen/normalText"
             android:textColor="@color/colorWhite"
             />
     </RelativeLayout>
</LinearLayout>
