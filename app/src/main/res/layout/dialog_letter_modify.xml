<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_bg_29"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/small_letter"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margSide"
                android:src="@mipmap/icon_decrease"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/big_letter"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/margSide"
                android:src="@mipmap/icon_increase"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/left_triangle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_reverse_triangle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_content"/>
</android.support.constraint.ConstraintLayout>
