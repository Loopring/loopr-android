<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/generate_partone"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/wallet_name"
            style="@style/editTextStyle"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="@string/wallet_name"
            android:imeOptions="actionNext"
            android:maxLength="16"
            android:maxLines="1"
            android:minWidth="40dp"
            android:textColorHint="@color/colorWhite"
            android:textCursorDrawable="@drawable/white_color_cursor"
            android:textSize="@dimen/normalText"
            app:met_baseColor="@color/colorWhite"
            app:met_checkCharactersCountAtBeginning="false"
            app:met_floatingLabel="none"
            app:met_helperTextColor="@color/colorWhite"
            app:met_hideUnderline="true"
            app:met_primaryColor="@color/colorWhite"/>

        <requestFocus/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password"
            style="@style/editTextStyle"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="@string/password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:minWidth="40dp"
            android:textColorHint="@color/colorWhite"
            android:textCursorDrawable="@drawable/white_color_cursor"
            android:textSize="@dimen/normalText"
            android:visibility="gone"
            app:met_baseColor="@color/colorWhite"
            app:met_checkCharactersCountAtBeginning="false"
            app:met_floatingLabel="none"
            app:met_helperTextColor="@color/colorWhite"
            app:met_hideUnderline="true"
            app:met_primaryColor="@color/colorWhite"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/repeat_password"
            style="@style/editTextStyle"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="@string/repeat_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:minWidth="40dp"
            android:textColorHint="@color/colorWhite"
            android:textCursorDrawable="@drawable/white_color_cursor"
            android:textSize="@dimen/normalText"
            android:visibility="gone"
            app:met_baseColor="@color/colorWhite"
            app:met_checkCharactersCountAtBeginning="false"
            app:met_floatingLabel="none"
            app:met_helperTextColor="@color/colorWhite"
            app:met_hideUnderline="true"
            app:met_primaryColor="@color/colorWhite"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/SubmitBtnStyle"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/ll_password"
        style="@style/MatchWrap.Horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/password_hint"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/good"
            android:textColor="@color/colorNineText"
            android:textSize="@dimen/normal14Text"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
