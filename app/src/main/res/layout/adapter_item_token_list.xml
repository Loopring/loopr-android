<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wallet_item"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg2_pressed"
                android:clickable="true"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_trades"/>

    <RelativeLayout
        style="@style/WrapMatch"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/wallet_image"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wallet_title"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:text="LRC"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal14Text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wallet_name"
            style="@style/WrapWrap"
            android:layout_below="@+id/wallet_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:text="Loopring"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"/>

    </RelativeLayout>


    <!--<ToggleButton-->
        <!--android:id="@+id/toggle_button"-->
        <!--android:layout_width="44dp"-->
        <!--android:layout_height="22.7dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:background="@drawable/toggle_drawable_selector"-->
        <!--android:checked="false"-->
        <!--android:clickable="false"-->
        <!--android:textOff="@null"-->
        <!--android:textOn="@null"/>-->
    <Switch
        android:id="@+id/s_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:checked="false"
        android:clickable="false"
        android:textOn="on"
        android:textOff="off"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track" />

</RelativeLayout>

